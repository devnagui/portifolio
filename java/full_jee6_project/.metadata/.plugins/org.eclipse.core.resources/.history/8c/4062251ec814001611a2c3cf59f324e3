package br.com.devnagui.project.rota.manter;

import static org.junit.Assert.assertTrue;
import static org.junit.Assert.fail;

import java.util.concurrent.TimeUnit;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.NoSuchElementException;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class AlterarRota {
  private WebDriver driver;
  private String baseUrl;
  private boolean acceptNextAlert = true;
  private StringBuffer verificationErrors = new StringBuffer();

  @Before
  public void setUp() throws Exception {
    driver = new FirefoxDriver();
    baseUrl = "http://localhost:8080/";
    driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
  }

  @Test
  public void testAlterarRota() throws Exception {
    driver.get(baseUrl + "/project/paginas/rotas/manterRotas.xhtml");
    driver.findElement(By.id("lnkPaginaManterRotas")).click();
    driver.findElement(By.id("tabela:3:j_idt52:0")).click();
    driver.findElement(By.id("tabela:3:j_idt52:0")).click();
    // ERROR: Caught exception [ERROR: Unsupported command [isEditable | id=alterarRota | ]]
    driver.findElement(By.id("alterarRota")).click();
    driver.findElement(By.id("observacaoRotaVersao")).clear();
    driver.findElement(By.id("observacaoRotaVersao")).sendKeys("Rota 4654353454");
    driver.findElement(By.id("cnpjBuscaPostoInput")).sendKeys("7025104000108");
    for (int second = 0;; second++) {
    	if (second >= 60) fail("timeout");
    	try { if (1 == driver.findElements(By.xpath("//table[@id='cnpjBuscaPostoItems']/tbody/tr/td[2]")).size()) break; } catch (Exception e) {}
    	Thread.sleep(1000);
    }

    driver.findElement(By.xpath("//table[@id='cnpjBuscaPostoItems']/tbody/tr/td[2]")).click();
    // Warning: waitForTextPresent may require manual changes
    for (int second = 0;; second++) {
    	if (second >= 60) fail("timeout");
    	try { if (driver.findElement(By.cssSelector("BODY")).getText().matches("^[\\s\\S]*$")) break; } catch (Exception e) {}
    	Thread.sleep(1000);
    }

    // ERROR: Caught exception [ERROR: Unsupported command [isEditable | id=salvarAtualizar | ]]
    driver.findElement(By.id("salvarAtualizar")).click();
    // Warning: assertTextPresent may require manual changes
    assertTrue(driver.findElement(By.cssSelector("BODY")).getText().matches("^[\\s\\S]*Alterado com sucesso\\.[\\s\\S]*$"));
  }

  @After
  public void tearDown() throws Exception {
    driver.quit();
    String verificationErrorString = verificationErrors.toString();
    if (!"".equals(verificationErrorString)) {
      fail(verificationErrorString);
    }
  }

  private boolean isElementPresent(By by) {
    try {
      driver.findElement(by);
      return true;
    } catch (NoSuchElementException e) {
      return false;
    }
  }

  private String closeAlertAndGetItsText() {
    try {
      Alert alert = driver.switchTo().alert();
      if (acceptNextAlert) {
        alert.accept();
      } else {
        alert.dismiss();
      }
      return alert.getText();
    } finally {
      acceptNextAlert = true;
    }
  }
}
