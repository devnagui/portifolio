package br.gov.ce.sefaz.project.manager;

import java.util.List;

import br.gov.ce.sefaz.project.entities.Contribuinte;

public interface ContribuinteManager extends GenericoManager<Contribuinte> {

	List<Contribuinte> buscarContribuinteAtivoPorCnpj(Long cnpj);

	/**
	 * Verifica se existe contribuintes ativos no cadastro da sefaz para o cnpj
	 * ou razao informados.
	 * 
	 * @param cnpjOuRazao
	 * @return
	 */
	boolean isContribuinteSAtivoNoCadastroSEFAZ(String cnpjOuRazao);

	/**
	 * Busca uma lista de contribuintes por razao social ou cnpj.
	 * 
	 * @param cnpjOuRazao
	 * @return
	 */
	Long obterTotalDeContribuintePorCnpjOuRazao(String cnpjOuRazao);

}
