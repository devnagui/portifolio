package br.com.devnagui.project.user;

import javax.persistence.EntityManager;
import javax.persistence.TypedQuery;

import org.junit.Test;
import org.mockito.stubbing.OngoingStubbing;

import br.com.devnagui.project.ejb.exception.BusinessException;
import br.com.devnagui.project.ejb.impl.UserBusinessEJB;
import br.com.devnagui.project.entities.User;
import static org.mockito.Mockito.*;
public class UserBusinessEJBTest {

	@Test
	public void test() throws BusinessException {
		UserBusinessEJB userBusinessEJB = mock(UserBusinessEJB.class);
		OngoingStubbing<EntityManager> thenReturn = when(userBusinessEJB.getEntityManager()).thenReturn(mock(EntityManager.class));
		TypedQuery typedQueryMock = mock(TypedQuery.class);
		when(userBusinessEJB.getEntityManager().createNamedQuery(User.QUERY_SEARCH_BY_REGISTRATION_OR_NAME, User.class)).thenReturn(typedQueryMock);
		when(typedQueryMock.getSingleResult()).thenReturn(new User());
		
		userBusinessEJB.getUserByRegistrationNumberAndName("12345678", "NAthan");
	}

}
