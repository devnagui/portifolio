package br.com.devnagui.project.enums;

import java.security.InvalidParameterException;
import java.util.Arrays;
import java.util.List;

/**
 * 
 * Criado por @author 006159C0 em 06/05/2013
 *
 */
public enum StatusRoteiro {

	ATRIBUIDO(1), INICIADO(2), CONCLUIDO(3);

	private final Integer codigoSituacao;

	/**
	 * 
	 */
	private StatusRoteiro(final Integer codSituacao) {
		this.codigoSituacao = codSituacao;
	}

	/**
	 * @return the codigoSituacao
	 */
	public Integer getCodigoSituacao() {
		return codigoSituacao;
	}
	
	public static StatusRoteiro getStatusRoteiroPorCodigo(final Integer codigo){
	    List<StatusRoteiro> statusList = Arrays.asList(StatusRoteiro.values());
	    for(StatusRoteiro status:statusList){
	        if(status.codigoSituacao == codigo){
	            return status;
	        }
	    }
	    throw new InvalidParameterException("msg.enum.naoEncontrada");
	}
}