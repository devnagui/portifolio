package br.gov.ce.sefaz.project.vo;

import java.io.Serializable;
import java.util.List;

import br.gov.ce.sefaz.project.entities.ItemNFEEntrada;
import br.gov.ce.sefaz.project.entities.LeituraEncerrante;
import br.gov.ce.sefaz.project.entities.MedicaoTanque;

/**
 * Classe para retornar todas as medicoes de uma visita(para nao criar um metodo por tipo de medicao)
 * 
 * Criado por @author 006159C0 em 12/07/2013
 *
 */
public class MedicoesVisitaVO implements Serializable {

	private static final long serialVersionUID = 55060108358565701L;
	
	private List<MedicaoTanque> medicoesTanque;
	private List<LeituraEncerrante> medicoesBico;
	private List<ItemNFEEntrada> itensNotaFiscal;
	
	/**
	 * Montar MedcioesVisitaVo por tipos de medicoes
	 * 
	 * @param medicoesTanque
	 * @param medicoesBico
	 * @param itensNotaFiscal
	 */
	public MedicoesVisitaVO(List<MedicaoTanque> medicoesTanque, List<LeituraEncerrante> medicoesBico, List<ItemNFEEntrada> itensNotaFiscal ) {
		this.medicoesTanque = medicoesTanque;
		this.medicoesBico = medicoesBico;
		this.itensNotaFiscal = itensNotaFiscal;
	}
	/**
	 * @return the medicoesTanque
	 */
	public List<MedicaoTanque> getMedicoesTanque() {
		return medicoesTanque;
	}
	/**
	 * @param medicoesTanque 
	 * 				the medicoesTanque to set
	 */
	public void setMedicoesTanque(List<MedicaoTanque> medicoesTanque) {
		this.medicoesTanque = medicoesTanque;
	}
	/**
	 * @return the medicoesBico
	 */
	public List<LeituraEncerrante> getMedicoesBico() {
		return medicoesBico;
	}
	/**
	 * @param medicoesBico 
	 * 				the medicoesBico to set
	 */
	public void setMedicoesBico(List<LeituraEncerrante> medicoesBico) {
		this.medicoesBico = medicoesBico;
	}
	/**
	 * @return the itensNotaFiscal
	 */
	public List<ItemNFEEntrada> getItensNotaFiscal() {
		return itensNotaFiscal;
	}
	/**
	 * @param itensNotaFiscal 
	 * 				the itensNotaFiscal to set
	 */
	public void setItensNotaFiscal(List<ItemNFEEntrada> itensNotaFiscal) {
		this.itensNotaFiscal = itensNotaFiscal;
	}
	
}
