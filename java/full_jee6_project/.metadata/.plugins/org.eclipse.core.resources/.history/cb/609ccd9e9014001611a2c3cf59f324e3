package br.gov.ce.sefaz.project.manager;

import java.io.Serializable;
import java.util.List;

import javax.persistence.EntityManager;

import br.gov.ce.sefaz.project.dto.PaginaDTO;
import br.gov.ce.sefaz.project.manager.exception.BusinessException;

/**
 * 
 * Criado por @author 006159C0 em 14/03/2013
 * 
 * @param <Entidade>
 */
public interface GenericoManager<Entidade extends Serializable> extends
		Serializable {

	public void inserir(Entidade entidade) throws BusinessException;

	public Entidade alterar(Entidade entidade) throws BusinessException;

	public void excluir(Entidade entidade) throws BusinessException;

	void recarregar(Entidade entidade) throws BusinessException;
	
	public Entidade buscar(Long id) throws BusinessException;

	public List<Entidade> buscarTodos() throws BusinessException;
	
	public EntityManager getEntityManager();

	public PaginaDTO<Entidade> obterListaPaginadaSimples(PaginaDTO<Entidade> paginacao)
			throws BusinessException;

	/**
	 * Serve para...
	 * 
	 * @param entidadeAtual
	 * @throws BusinessException
	 */
	void removerDoContexto(Entidade entidade) throws BusinessException;

	/**
	 * Inicializar um objeto proxy ou colecao.
	 * 
	 * @param colecao
	 */
	void inicializarObjetoOuColecao(Object colecao);

}