package br.com.devnagui.project.manager;

import java.util.List;

import br.com.devnagui.project.entities.Usuario;
import br.com.devnagui.project.manager.exception.BusinessException;

public interface UsuarioManager extends GenericoManager<Usuario>{
		
	public List<Usuario> getUserByRegistrationNumberOrName(String userName);
	
	public Usuario getUserByRegistrationNumberAndName(String matriculaUsuario, String nomeUsuario) throws BusinessException;
	
	public Usuario obterUsuarioPorMatriculaOuNome(String usuarioBuscado) throws BusinessException;

	public void validarUsuario(Usuario usuario) throws BusinessException;

	public void validarCamposUsuario(Usuario usuario) throws BusinessException;

	public void validarUsuarioExiste(Usuario usuario) throws BusinessException;	
}
