package br.gov.ce.sefaz.project.entities;

import java.io.Serializable;
import java.util.Date;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;
import javax.persistence.Temporal;
import javax.persistence.TemporalType;
import javax.validation.constraints.NotNull;

/**
 * Criado por @author 006157C6 em 28/03/2013
 * 
 */
@Entity
@Table(name = "LACRE_BOMBA",schema="PROJECT")
public class LacreBomba implements Serializable, Comparable<LacreBomba> {

	// ATRIBUTOS E CONSTRUTORES
	/**
	 * 
	 */
	private static final long serialVersionUID = -5855180156510763286L;

	@Id
	@Column(name = "SEQ_LACRE_BOMBA")
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "SQ_LACRE_BOMBA")
	@SequenceGenerator(name = "SQ_LACRE_BOMBA", sequenceName = "SQ_LACRE_BOMBA", allocationSize = 1, initialValue = 1)
	private Long id;

	@ManyToOne(optional = false)
	@JoinColumn(name = "SEQ_BOMBA", nullable = false)
	private Bomba bomba;

	@NotNull(message = "msg.aba.bomba.bombaEscolhida.numero.obrigatorio")
	@Column(name = "NUM_LACRE", length = 20)
	private String numLacreBomba;

	@Column(name = "DAT_APLICACAO")
	@Temporal(TemporalType.DATE)
	@NotNull(message = "msg.aba.bomba.bombaEscolhida.dataAplica.obrigatorio")
	private Date dataAplicacao;

	@Column(name = "DAT_VALIDADE")
	@Temporal(TemporalType.DATE)
	private Date dataValidade;

	// METODOS PUBLICOS
	/*
	 * (non-Javadoc)
	 * 
	 * @see java.lang.Comparable#compareTo(java.lang.Object)
	 */

	@Override
	public int compareTo(LacreBomba outroLacre) {
		return outroLacre.id.compareTo(this.id);
	}

	// METODOS PRIVADOS

	// GETS E SETS

	/**
	 * @return the id
	 */
	public Long getId() {
		return id;
	}

	/**
	 * @param id
	 *            the id to set
	 */
	public void setId(Long id) {
		this.id = id;
	}

	/**
	 * @return the bomba
	 */
	public Bomba getBomba() {
		return bomba;
	}

	/**
	 * @param bomba
	 *            the bomba to set
	 */
	public void setBomba(Bomba bomba) {
		this.bomba = bomba;
	}

	/**
	 * @return the numLacreBomba
	 */
	public String getNumLacreBomba() {
		return numLacreBomba;
	}

	/**
	 * @param numLacreBomba
	 *            the numLacreBomba to set
	 */
	public void setNumLacreBomba(String numLacreBomba) {
		this.numLacreBomba = numLacreBomba;
	}

	/**
	 * @return the dataAplicacao
	 */
	public Date getDataAplicacao() {
		return dataAplicacao;
	}

	/**
	 * @param dataAplicacao
	 *            the dataAplicacao to set
	 */
	public void setDataAplicacao(Date dataAplicacao) {
		this.dataAplicacao = dataAplicacao;
	}

	/**
	 * @return the dataValidade
	 */
	public Date getDataValidade() {
		return dataValidade;
	}

	/**
	 * @param dataValidade
	 *            the dataValidade to set
	 */
	public void setDataValidade(Date dataValidade) {
		this.dataValidade = dataValidade;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see java.lang.Object#hashCode()
	 */
	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((bomba == null) ? 0 : bomba.hashCode());
		result = prime * result + ((id == null) ? 0 : id.hashCode());
		result = prime * result + ((numLacreBomba == null) ? 0 : numLacreBomba.hashCode());
		return result;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see java.lang.Object#equals(java.lang.Object)
	 */
	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (!(obj instanceof LacreBomba))
			return false;
		LacreBomba other = (LacreBomba) obj;
		if (bomba == null) {
			if (other.bomba != null)
				return false;
		} else if (!bomba.equals(other.bomba))
			return false;
		if (id == null) {
			if (other.id != null)
				return false;
		} else if (!id.equals(other.id))
			return false;
		if (numLacreBomba == null) {
			if (other.numLacreBomba != null)
				return false;
		} else if (!numLacreBomba.equals(other.numLacreBomba))
			return false;
		return true;
	}

}
