package br.com.devnagui.project.manager.strategy.visita;

import java.io.Serializable;
import java.util.List;
import java.util.Set;

import br.com.devnagui.project.entities.ProdutoCombustivel;
import br.com.devnagui.project.entities.Visita;
import br.com.devnagui.project.manager.exception.BusinessException;

public interface VisitaMedicaoStrategy <MedicaoVO extends Serializable>{
    

    List<MedicaoVO> montarMedicoesComInformacoesAnteriores(Visita visitaAtual, Set<Long> tiposCombustiveis) throws BusinessException;
    
    void removerMedicoesPorCombustivel(List<ProdutoCombustivel> produtoCombustiveisFiscalizados, List<MedicaoVO> medicoesCombustiveis) throws BusinessException;
    
    Visita salvarMedicoesCombustiveis(Visita visitaAtual, List<MedicaoVO> medicoesAtuais ) throws BusinessException;
    
    MedicaoVO buscarMedicaoAnterior(Long idMedicao, Long idVisita);
}
