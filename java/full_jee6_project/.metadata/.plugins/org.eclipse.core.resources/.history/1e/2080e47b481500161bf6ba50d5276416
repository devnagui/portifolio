package br.com.devnagui.project.util;

import java.io.Serializable;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import org.apache.log4j.Logger;

public class Util implements Serializable {

	/**
	 * Serial UID.
	 */
	private static final long serialVersionUID = 1L;
	
	private static final Logger LOG = Logger.getLogger(Util.class);
	
	public static String removeNotNumberCharacters(String caracteres) {
		caracteres = caracteres.replaceAll("[^0-9]", "");
		return caracteres;
	}
	
	/**
	 * M�todo que aplica a mascar� da data para deixar padr�o.
	 * 
	 * @param data
	 * @return
	 */
	public static Date formateDateWithPTBRPattern(Date data) {
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
		Date dataFormatada = null;
		try {
			dataFormatada = sdf.parse(sdf.format(data));
		} catch (ParseException e) {
			LOG.error("Mensagem de erro gen�rica: ",e);
		}
		return dataFormatada;
	}
	
	public static boolean isStringNotNullOuVazia(final String string) {
		return string != null && !"".equals(string);
	}
}